{
    "rules": {
        "active": [
            "device_verify",
            "time_verify",
            "network_verify",
            "version_verify"
        ],
        "optional": [
            "location_verify",
            "usage_verify"
        ],
        "priority": {
            "device_verify": 1,
            "time_verify": 2,
            "network_verify": 3,
            "version_verify": 4
        }
    },
    "algorithms": {
        "primary": ["sha256", "md5"],
        "secondary": ["custom_algo_1", "custom_algo_2"],
        "fallback": "basic_verify"
    },
    "verify_chain": [
        {"step": 1, "type": "device", "algo": "sha256"},
        {"step": 2, "type": "time", "algo": "custom_algo_1"},
        {"step": 3, "type": "network", "algo": "md5"}
    ],
    "time_rules": {
        "max_offset": 300,
        "check_points": [3600, 7200, 14400]
    }
} 